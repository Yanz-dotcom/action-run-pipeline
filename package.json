{
  "name": "action-run-pipeline",
  "version": "0.2.0",
  "scripts": {
    "build": "ncc build src/index.ts --minify --out dist/",
    "lint:fix": "eslint --fix src src/__tests__",
    "lint": "eslint src src/__tests__",
    "test": "jest",
    "test:watch": "jest -w",
    "pre-commit": "run-p build test lint:fix"
  },
  "license" : "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit && git add src/ dist/"
    }
  },
  "jest": {
    "testEnvironment": "node"
  },
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/github": "^4.0.0",
    "@refactr/api-client": "v0.8.2-rc.1"
  },
  "devDependencies": {
    "ts-node": "^9.1.1",
    "ts-jest": "^26.5.6",
    "@types/axios": "^0.14.0",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.2",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "@vercel/ncc": "^0.28.5",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.0",
    "typescript": "^4.2.4"
  }
}
